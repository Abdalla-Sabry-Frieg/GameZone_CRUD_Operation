@model IEnumerable<Game> 
@{
	ViewData["Title"] = "Add Games";
}
<p>index from game controller</p>
<a class="btn btn-secondary btn-lg" asp-action="Create" asp-controller="Games">
	<i class="bi bi-plus-circle-dotted"></i>
	Add Game
</a>

@if (!Model.Any())
{
    <div class="alert alert-warning mb-5 mt-5">
        <h4 class="alert-heading">No Games!</h4>
        <p class="mb-5">No Game Added Here</p>
    </div>
}
else
{
    <div class="mt-5"> 
        <table class="table table-bordered  border-primary">
            <tbody>
                @foreach(var game in Model)
                {
                    <tr class="border-1 border-success">
                        <td>
                            <div class="d-flex ">
                                <div class="pe-4">
                                    <img src="@($"{ImageLocation.ImagePath}/{game.Cover}")" alt="@game.Name" style="max-width:90px" />
                                </div>
                                <div class="d-flex flex-column justify-content-center">
                                    <h4>@game.Name</h4>
                                    <h5 class="">@game.Category.Name</h5>
                                </div>
                            </div>
                        </td>
                        <td class="align-middle ">
                            <div class="d-flex justify-content-end ">
                                <a class="btn btn-info rounded rounded-3 me-2 " style="background-color:midnightblue" asp-action="Edit" asp-controller="Games" asp-route-id="@game.id">
                                    <i class="bi bi-pencil-fill .text-white"></i>
                                </a>
                                <a class="btn btn-danger rounded rounded-3 me-3 js-delete" data-id="@game.id" style="background-color:red">
                                    <i class="bi bi-trash3 .text-white"></i>
                                </a>

                            </div>
                        </td>
                    </tr>
                }
            </tbody>

        </table>
    </div>
}

@section Scripts 
{
	<script src="~/js/games-index-delete.js" asp-append-version="true"></script>
}


