@model IEnumerable<Game>

@{
    ViewData["Title"] = "Home Page";
}

@if(!Model.Any())
{
    <div class="alert alert-warning mb-5 mt-5">
        <h4 class="alert-heading">No Games!</h4>
        <p class="mb-5">No Game Added Here</p>
    </div>
}
else
{
   <div class="row mt-5">
        @foreach (var game in Model)
        {
            <div class="col-lg-4 col-md-6 ">
                <a class="card text-white bg-success mb-3 border border-danger text-decoration-none rounded-3 overflow-hidden " asp-controller="Games" asp-action="Details" asp-route-id="@game.id">
                      <div class="card-body" style="background-image:url(@($"{ImageLocation.ImagePath}/{game.Cover}")); background-size:cover; background-position:center ; height:500px">
                          <div class="h-100 d-flex align-items-end justify-content-center ">
                            <span class="badge fs-5" style="background-color:#1f2539 ">@game.Category?.Name</span>
                          </div>
                      </div>
                    <div class="card-footer text-muted d-flex justify-content-between align-items-center" style="background-color:#1f2539; color : wheat;">
                          <h5>@game.Name</h5>
                          <div>
                              @foreach(var gameDevice in game.Devices)
                            {
                                <i class="@gameDevice.Device.Icon  me-2 fs-4"> </i>
                            }
                        </div>

                      </div>
               </a>
        
            </div>
        }
  </div>
}


